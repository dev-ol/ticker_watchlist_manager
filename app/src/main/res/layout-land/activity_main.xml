<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/ticker_fragment"
        android:name="com.example.tickerwatchlistmanager.TickerListFragment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:layout="@layout/fragment_ticker_list" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/info_web_fragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.example.tickerwatchlistmanager.InfoWebFragment"
        android:layout_weight="2"
        tools:layout= "@layout/fragment_info_web"
        />

</LinearLayout>